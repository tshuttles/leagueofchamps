<%= form_for @user, url: login_path, method: :post do |f| %> 
  <%= f.label :name, "Your name" %> 
  <%= f.collection_select(:name, User.all, :name, :name, :prompt: "Please select your username from this dropdown")

  <%= f.label :password, "Your password" %> 
  <%= f.password_field :password %> 

  <%= f.submit "Login" %> 
<% end %> 