<h1>Create a New Weapon</h1>

<%= form_with model: @weapon, local: true do |f| %> 
  <%= f.label :weapon_type, "Weapon Type:" %>
  <%= f.text_field :weapon_type %><br>

  <%= f.fields_for :inventory_items, @champion.inventory_items.build do |attr| %> 
    <%= attr.label :weapon_name, "Unique Weapon Name:" %>
    <%= attr.hidden_id :champion_id %>
    <%= attr.text_field :weapon_name %><br>
  <% end %><br>

  <%= f.submit "Create Weapon" %> 
<% end %><br>

<%= link_to "Your Weapons", weapons_path %>